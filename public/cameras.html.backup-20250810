    <script>
        async function loadCameras() {
            try {
                const response = await fetch('/api/cameras');
                const cameras = await response.json();
                
                // Update stats
                const cameraCount = cameras.length;
                const brands = [...new Set(cameras.map(c => c.brand))];
                const manualsCount = cameras.filter(c => c.manualUrl).length;
                
                document.getElementById('camera-count').textContent = cameraCount;
                document.getElementById('brand-count').textContent = brands.length;
                document.getElementById('manual-count').textContent = manualsCount;
                
                // Display cameras
                const grid = document.getElementById('camera-grid');
                grid.innerHTML = cameras.map(camera => `
                    <div class="camera-card" onclick="window.location.href='/camera/${camera.id}'">
                        <img src="${camera.imageUrl || '/images/camera-placeholder.jpg'}" 
                             alt="${camera.fullName}" 
                             class="camera-image"
                             onerror="this.src='/images/camera-placeholder.jpg'">
                        <div class="camera-info">
                            <div class="camera-brand">${camera.brand || 'Unknown'}</div>
                            <div class="camera-model">${camera.model || 'Unknown Model'}</div>
                            <div class="camera-specs">
                                ${camera.sensorMegapixels ? `<span class="spec-badge">${camera.sensorMegapixels}MP</span>` : ''}
                                ${camera.sensorSize ? `<span class="spec-badge">${camera.sensorSize}</span>` : ''}
                                ${camera.videoMaxResolution ? `<span class="spec-badge">${camera.videoMaxResolution}</span>` : ''}
                                ${camera.ibis ? '<span class="spec-badge">IBIS</span>' : ''}
                            </div>
                            <div class="camera-meta">
                                <span class="release-year">${camera.releaseYear || 'Year Unknown'}</span>
                                ${camera.manualUrl ? 
                                    '<a href="#" class="manual-link" onclick="event.stopPropagation(); window.open(\'' + camera.manualUrl + '\')">Manual â†’</a>' : 
                                    '<span style="color: #999;">No manual</span>'
                                }
                            </div>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading cameras:', error);
                document.getElementById('camera-grid').innerHTML = '<p>Error loading cameras. Please try again.</p>';
            }
        }
        
        // Load cameras on page load
        loadCameras();
    </script>
