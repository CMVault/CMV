<%
locals.title = 'Search';
locals.pageStyles = [];
locals.pageScripts = [];
%>

<div class="page-content">
    <div class="container">
        <h1>Search Cameras</h1>
        
        <form id="searchForm" class="mb-4">
            <div class="form-group">
                <input type="search" class="form-input" id="searchInput" placeholder="Search cameras..." required>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        
        <div id="searchResults"></div>
    </div>
</div>

<script>
document.getElementById('searchForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const query = document.getElementById('searchInput').value;
    
    try {
        const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
        const data = await response.json();
        
        document.getElementById('searchResults').innerHTML = data.results.length > 0 ? `
            <h2>Search Results</h2>
            <div class="grid grid-3">
                ${data.results.map(camera => `
                    <div class="card" onclick="window.location.href='/camera/${camera.id}'">
                        <h3>${camera.fullName}</h3>
                        <p>${camera.category || 'Camera'} â€¢ ${camera.releaseYear || 'N/A'}</p>
                    </div>
                `).join('')}
            </div>
        ` : '<p>No cameras found</p>';
    } catch (error) {
        document.getElementById('searchResults').innerHTML = '<p class="error">Search error</p>';
    }
});
</script>
