<%
locals.title = 'Camera Finder';
locals.pageStyles = [];
locals.pageScripts = [];
%>

<div class="page-content">
    <div class="container">
        <h1>Find Your Perfect Camera</h1>
        <p>Answer a few questions to get personalized recommendations</p>
        
        <form id="finderForm" class="mt-3">
            <div class="form-group">
                <label class="form-label">What's your budget?</label>
                <select class="form-select" name="budget">
                    <option value="1000">Under $1,000</option>
                    <option value="2500">Under $2,500</option>
                    <option value="5000">Under $5,000</option>
                    <option value="10000">$5,000+</option>
                </select>
            </div>
            
            <div class="form-group">
                <label class="form-label">Camera Type</label>
                <select class="form-select" name="cameraType">
                    <option value="any">Any</option>
                    <option value="mirrorless">Mirrorless</option>
                    <option value="dslr">DSLR</option>
                    <option value="cinema">Cinema</option>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Find Cameras</button>
        </form>
        
        <div id="results" class="mt-4"></div>
    </div>
</div>

<script>
document.getElementById('finderForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    
    try {
        const response = await fetch('/api/camera-finder', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                budget: formData.get('budget'),
                cameraType: formData.get('cameraType')
            })
        });
        
        const data = await response.json();
        
        document.getElementById('results').innerHTML = data.recommendations.length > 0 ? `
            <h2>Recommended Cameras</h2>
            <div class="grid grid-3">
                ${data.recommendations.map(cam => `
                    <div class="card">
                        <h3>${cam.fullName}</h3>
                        <p>Match Score: ${cam.matchScore}%</p>
                        <a href="/camera/${cam.id}" class="btn btn-primary">View Details</a>
                    </div>
                `).join('')}
            </div>
        ` : '<p>No cameras found matching your criteria</p>';
    } catch (error) {
        document.getElementById('results').innerHTML = '<p class="error">Error finding cameras</p>';
    }
});
</script>
